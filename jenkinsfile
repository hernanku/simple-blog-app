pipeline {
    agent {
        docker {
            image 'node:13.12.0'
        }
    }
    environment {
        HOME = '.'
    }
    stages {
        stage('Clone repo') {
            steps {
                git branch: 'develop',
                    credentialsId: 'jenkins-ssh-priv',
                    url: 'git@github.com:hernanku/simple-blog-app.git'
            }
        }
        stage('Code Build') {
            steps {
                echo 'Running npm build'
                sh 'npm --version'
                sh 'npm install'
                sh 'npm run build'
            }
        }
    }
}
